<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title></title>
</head>
<body>
	<% if @content.errors.any? %>
		<%= @content.errors.full_messages.join('') %>
	<% end %>
 	<%= form_with(model: @content, local: true) do |form| %>
 		<div class="field">
 			<%= form.label :title %>
 			<%= form.text_field :title %>
 		</div>

 		<div class="field">
 			<%= form.label :description %>
 			<%= form.text_area :description %>
 		</div>

 		<div class="actions">
 			<%= form.submit %>
 		</div>
 	<% end %>
</body>
</html>